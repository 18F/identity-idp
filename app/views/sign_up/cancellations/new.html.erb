<% self.title = t('headings.cancellations.prompt') %>

<%= render StatusPageComponent.new(status: :warning) do |c| %>
  <% c.with_header { t('headings.cancellations.prompt') } %>

  <p>
    <strong><%= t('sign_up.cancel.warning_header') %></strong>
  </p>

  <ul class="usa-list">
    <li><%= t('users.delete.bullet_1', app_name: APP_NAME) %></li>
    <li><%= t('users.delete.bullet_2_basic') %></li>
    <li><%= t('users.delete.bullet_3', app_name: APP_NAME) %></li>
    <li><%= t('users.delete.bullet_4', app_name: APP_NAME) %></li>
  </ul>

  <% c.with_action_button(
       url: sign_up_destroy_path,
       method: :delete,
     ) { t('forms.buttons.cancel') } %>

  <% c.with_action_button(
       url: @presenter.go_back_path,
       outline: true,
     ) { t('links.go_back') } %>
<% end %>
