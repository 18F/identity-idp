<% self.title = @presenter.title %>

<%= render StatusPageComponent.new(status: :error) do |c| %>
  <% c.with_header { @presenter.heading  } %>

  <p>
    <%= t('login_cancel.header', app_name: APP_NAME) %>
  </p>

  <ul class="usa-list">
    <li><%= t('login_cancel.bullet1_html', app_name: APP_NAME, sp_name: decorated_sp_session.sp_name) %></li>
    <li>
      <%= t(
            'login_cancel.bullet2_html', app_name: APP_NAME,
                                         link_html: link_to(
                                           t('login_cancel.account_page'),
                                           account_path,
                                         )
          ) %>
    </li>
  </ul>

<%= render ButtonComponent.new(
      url: login_two_factor_piv_cac_url,
      class: 'margin-top-3',
      big: true,
    ).with_content(t('instructions.mfa.piv_cac.back_to_sign_in')) %>
  </div>
 
<% end %>