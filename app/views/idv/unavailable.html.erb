<% title t('idv.titles.unavailable') %>

<%= render AlertIconComponent.new(icon_name: :error, class: 'display-block margin-bottom-4') %>

<%= render PageHeadingComponent.new.with_content(t('idv.titles.unavailable')) %>

<p>
  <%= t(
        decorated_session.sp_name ?
          'idv.unavailable.idv_explanation.with_sp' :
          'idv.unavailable.idv_explanation.without_sp',
        sp: decorated_session.sp_name,
      ) %>
</p>

<p class="margin-bottom-5">
  <%= t(
        'idv.unavailable.next_steps_html',
        status_page_link: new_window_link_to(
          t('idv.unavailable.status_page_link'),
          StatusPage.base_url,
        ),
      ) %>
</p>

<%= render ButtonComponent.new(
      action: ->(**tag_options, &block) do
        link_to(
          return_to_sp_failure_to_proof_path(location: :unavailable),
          **tag_options,
          &block
        )
      end,
      big: true,
      wide: true,
    ).with_content(t('idv.unavailable.exit_button', app_name: APP_NAME)) %>
