<% title t('titles.idv.cancelled') %>

<%= render StatusPageComponent.new(type: :error) do |c| %>
  <% if @hybrid_session %>
    <% c.header { t('idv.cancel.headings.confirmation.hybrid') } %>

    <p><%= t('doc_auth.instructions.switch_back') %></p>
    <%= image_tag(asset_url('idv/switch.png'), width: 193) %>
  <% else %>
    <% c.header { t('headings.cancellations.confirmation', app_name: APP_NAME) } %>

    <ul class="usa-list">
      <li><%= t('idv.cancel.warnings.warning_2') %></li>
      <li><%= t('idv.cancel.warnings.warning_3', app_name: APP_NAME) %></li>
      <li><%= t('idv.cancel.warnings.warning_4', app_name: APP_NAME) %></li>
      <li><%= t('idv.cancel.warnings.warning_5') %></li>
    </ul>
    <%= link_to(
          "â€¹ #{t('links.back_to_sp', sp: decorated_session.sp_name || t('links.my_account'))}",
          decorated_session.sp_name ? @return_to_sp_path : account_url,
        ) %>
  <% end %>
  <% end %>
<% end %>
