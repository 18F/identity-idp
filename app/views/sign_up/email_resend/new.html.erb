<% title t('titles.confirmations.new') %>

<%= render PageHeadingComponent.new.with_content(t('headings.confirmations.new')) %>
<%= validated_form_for(
      @resend_email_confirmation_form,
      url: sign_up_register_path,
      html: { autocomplete: 'off', method: :post },
    ) do |f| %>
  <%= f.input :email,
              label: t('forms.registration.labels.email'),
              required: true,
              input_html: { aria: { invalid: false } } %>
  <%= f.input :request_id, as: :hidden %>
  <%= f.button :submit, t('forms.buttons.resend_confirmation'), class: 'usa-button--big usa-button--wide margin-top-2 margin-bottom-1' %>
<% end %>
