    - needs_to_confirm_email_change?
FeatureEnvy:
  exclude:
    - track_registration
    - append_info_to_payload
    - generate_slo_request
IrresponsibleModule:
  enabled: false
NilCheck:
  exclude:
    - Users::PhoneConfirmationController
    - slo_not_implemented_at_sp?
    - in_slo?
    - TotpSetupController#new
    - TotpSetupController#valid_code?
    - user_not_found?
TooManyStatements:
  max_statements: 6
TooManyMethods:
  exclude:
    - Devise::TwoFactorAuthenticationController
    - Users::ConfirmationsController
