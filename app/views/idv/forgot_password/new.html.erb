<% t('idv.forgot_password.modal_header') %>

<%= image_tag(asset_url('alert/forgot.svg'), width: 54) %>

<h1 class="h3 margin-bottom-1 margin-top-4 margin-y-0">
  <%= t('idv.forgot_password.modal_header') %>
</h1>

<hr>

<ul class="list-reset teal-dots">
  <li><%= t('idv.forgot_password.warnings.warning_1') %></li>
  <li><%= t('idv.forgot_password.warnings.warning_2') %></li>
</ul>

<div class='margin-top-4'>
  <%= link_to t('idv.forgot_password.try_again'), idv_review_path,
    class: 'usa-button usa-button--wide' %>
</div>
<div class='margin-top-2'>
  <%= button_to t('idv.forgot_password.reset_password'), idv_forgot_password_path,
    method: :post, class: 'usa-button usa-button--wide usa-button--outline' %>
</div>
