<%# Beware: This component is used in mailer content, so be mindful of email markup compatibility %>
<%= content_tag(
      :div,
      role: 'figure',
      aria: { labelled_by: barcode_caption_id },
      class: 'display-inline-block margin-0',
      **tag_options,
    ) do %>
  <%= barcode_html.html_safe %>
  <div id="<%= barcode_caption_id %>" class="text-center margin-top-1">
    <% if data_label.present? %>
      <span class="usa-sr-only"><%= data_label %>:</span>
    <% end %>
    <%= formatted_data %>
  </div>
<% end %>
