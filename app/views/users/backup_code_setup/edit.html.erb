<%= render PageHeadingComponent.new.with_content(t('forms.backup_code_regenerate.confirm')) %>

<p>
  <%= t('forms.backup_code_regenerate.caution') %>
</p>

<%= form_tag(backup_code_setup_path, method: :patch, class: 'margin-top-5') do %>
