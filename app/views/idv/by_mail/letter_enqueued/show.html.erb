<% content_for(:pre_flash_content) do %>
  <%= render StepIndicatorComponent.new(
    steps: step_indicator_steps,
    current_step: :get_a_letter,
    locale_scope: 'idv',
    class: 'margin-x-neg-2 margin-top-neg-4 tablet:margin-x-neg-6 tablet:margin-top-neg-4',
  ) %>
<% end %>

<% self.title = t('titles.idv.come_back_soon') %>

<%= image_tag(
  asset_url('come-back.svg'),
  size: '140', class: 'display-block margin-left-0 margin-bottom-2',
  alt: t('idv.images.come_back_later')
) %>

<%= render PageHeadingComponent.new(class: 'text-left').with_content(t('idv.titles.come_back_later')) %>

<p><%= t('idv.gpo.will_send_to')%></p>

<div class="grid-row grid-gap grid-gap-2 padding-bottom-1 padding-top-1">
  <dl class='grid-col-fill margin-y-0'>
    <div>
      <dd class="display-inline margin-left-0"> <%= @pii[:address1] %> </dd>
    </div>
    <% if @pii.key?(:address2) %>
      <div>
        <dd class="display-inline margin-left-0"> <%= @pii[:address2].presence %> </dd>
      </div>
    <% end %>
    <div>
      <dd class="display-inline margin-left-0"> <%= "#{@pii[:city]}, #{@pii[:state]}, #{@pii[:zipcode]}" %> </dd>
    </div>
  </dl>
</div>

<div class="text-left padding-top-3 padding-bottom-3">
  <%= t('idv.messages.come_back_later_html') %>
</div>

<% if decorated_sp_session.sp_name.present? %>
  <%= link_to(
    t('idv.cancel.actions.exit', app_name: APP_NAME),
    return_to_sp_cancel_path(step: :get_a_letter, location: :come_back_later),
    class: 'usa-button usa-button--big usa-button--wide',
  ) %>
<% else %>
  <%= link_to(
    t('idv.buttons.continue_plain'),
    account_path,
    class: 'usa-button usa-button--big usa-button--wide',
  ) %>
<% end %>
