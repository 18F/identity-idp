{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "*": ["typings/*"]
    }
  },
  "include": [
    "app/components",
    "app/javascript/packages",
    "app/javascript/packs",
    "spec/javascript/spec_helper.d.ts",
    "spec/javascript/**/*.ts",
    "spec/javascript/**/*.tsx",
    "./*.js",
    "scripts"
  ],
  "exclude": [
    "**/fixtures",
    "spec/**/*.spec.js",
    "app/javascript/packs/digital-analytics-program.ts",
    "app/javascript/packages/analytics/digital-analytics-program*.js"
  ]
}
