    <label class="usa-label">     
        <%= @label %>
    </label>
    <span class="usa-hint" id="dob_hint">
        <%= @hint %>
    </span>
       <div class="usa-memorable-date">
       <lg-validated-field>
       <%= content_tag(
           :script,
           error_messages.to_json,
           {
             type: 'application/json',
             class: 'validated-field__error-strings',
           },
           false,
         ) %>
          <%= f.input(
            :month,
            pattern: '^\d{2}$',
            wrapper_html: { class: 'usa-form-group usa-form-group--month margin-bottom-0'},
            label_html: { class: 'usa-label' },
            input_html: {
                type: 'number',
                class: 'validated-field__input',
            aria: {
                invalid: false,
                describedby: "validated-field-error-#{unique_id}",
            },
            },
            error: { id: "validated-field-error-#{unique_id}" },
            ) %>
        </lg-validated-field>
        <lg-validated-field>
        <%= content_tag(
            :script,
            error_messages.to_json,
            {
              type: 'application/json',
              class: 'validated-field__error-strings',
            },
            false,
          ) %>
        <%= f.input(
            :day,
            pattern: '^\d{2}$',
            wrapper_html: { class: 'usa-form-group usa-form-group--day margin-bottom-0'},
            label_html: { class: 'usa-label' },
            input_html: {
                type: 'number',
                class: 'validated-field__input',
                max: 31,
            aria: {
                invalid: false,
                describedby: "validated-field-error-#{unique_id}",
            },
            },
            error: { id: "validated-field-error-#{unique_id}" },
        ) %>
        </lg-validated-field>
        <lg-validated-field>
        <%= content_tag(
            :script,
            { valueMissing: 'Year is required' }.to_json,
            {
              type: 'application/json',
              class: 'validated-field__error-strings',
            },
            false,
          ) %>
        <%= f.input(
            :year,
            pattern: '^\d{2}$',
            wrapper_html: { class: 'usa-form-group usa-form-group--year margin-bottom-0'},
            label_html: { class: 'usa-label' },
            input_html: {
                type: 'number',
                class: 'validated-field__input',
            aria: {
                invalid: false,
                describedby: "validated-field-error-#{unique_id}",
            },
            },
            error: { id: "validated-field-error-#{unique_id}" },
        ) %>
        </lg-validated-field>
        </div>
     <div class="usa-error-message" id="validated-field-error-<%= unique_id %>"></div>
