      - saml_settings
      - sign_up_and_2fa
      - raw_xml_response
      - sign_in_user
      - stub_auth
  FeatureEnvy:
    enabled: false
  NestedIterators:
    exclude:
      - complete_idv_questions_fail
      - complete_idv_questions_ok
  NilCheck:
    exclude:
      - complete_idv_questions_fail
      - complete_idv_questions_ok
  TooManyInstanceVariables:
    enabled: false
  TooManyMethods:
    enabled: false
  TooManyStatements:
    enabled: false
  UncommunicativeVariableName:
    exclude:
      - complete_idv_questions_fail
      - complete_idv_questions_ok
