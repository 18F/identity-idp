<% title t('account_reset.confirm_request.check_your_email') %>

<div class="margin-top-neg-2">
  <%= image_tag asset_url('check-email.svg'), alt: '', width: 24, class: 'left-0 right-0 ico-heading' %>
  <h1 class="margin-top-2 margin-left-1 ico-heading"><%= t('headings.verify_email') %></h1>
</div>

<p><%= t('account_reset.confirm_request.instructions_start') %>
  <strong><%= email %></strong>
  <%= t('account_reset.confirm_request.instructions_end') %>
</p>

<div class="width-10">
  <hr class="margin-y-4 border-width-05 border-teal">
</div>

<% if sms_phone %>
  <p><%= t('account_reset.confirm_request.security_note') %></p>
<% end %>

<p><%= t('account_reset.confirm_request.close_window') %></p>
