<% title t('titles.enter_2fa_code.security_code') %>

<%= render PageHeadingComponent.new.with_content(t('two_factor_authentication.personal_key_header_text')) %>

<p>
  <%= t('two_factor_authentication.personal_key_prompt') %>
</p>

<%= simple_form_for(
      @personal_key_form, url: login_two_factor_personal_key_path,
                          html: { autocomplete: 'off', method: :post }
    ) do |f| %>
  <%= render 'partials/personal_key/entry_fields', f: f, attribute_name: :personal_key %>
  <%= f.submit t('forms.buttons.submit.default') %>
<% end %>

<%= render 'shared/fallback_links', presenter: @presenter %>
<%= render 'shared/cancel', link: sign_out_path %>
