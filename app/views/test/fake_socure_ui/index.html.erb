<% self.title = 'Test Socure Configuration' %>
<h1>Test Socure Configuration</h1>
<hr />

<div class="grid-row grid-cap margin-top-2 flex-align-stretch">
  <div class="tablet:grid-col">
      <%= form_with url: test_fake_socure_ui_path, method: :post do |form| %>
        <fieldset class="usa-fieldset">
          <%= form.check_box :enabled, checked: @enabled %>
          <%= form.label "Enable", for: :enabled %>
        </fieldset>

        <fieldset class="usa-fieldset" >
          <h4>Fixture</h4>
          <%=
            form.collection_select(
              :selected_fixture,
              @socure_fixtures,
              :name,
              :pretty_name,
              selected: @selected_fixture,
              prompt: 'Select a fixture',
            )
          %>
        </fieldset>

        <%= submit_tag "Apply", class: 'margin-top-2' %>
      <% end %>
  </div>
</div>

<div class="grid-row grid-cap margin-top-2 flex-align-stretch bg-accent-cool-lighter">
  <% if @selected_fixture_body %>
    <div class="tablet:grid-col">
        <% if @selected_fixture_body %>
          <pre><%= JSON.pretty_generate(@selected_fixture_body) %></pre>
        <% end %>
    </div>
  <% end %>
</div>
