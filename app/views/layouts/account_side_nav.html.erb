<% content_for(:header) do %>
  <%= render 'accounts/nav_auth', enable_mobile_nav: true, greeting: @presenter.header_personalization %>
<% end %>

<% content_for(:mobile_nav) do %>
  <%= render 'accounts/mobile_nav' %>
<% end %>

<% content_for :content do %>
  <!-- Todo add translation for the following link -->
  <%= link_to 'Skip to edit account profile', '#account-profile', class: 'usa-skipnav position-fixed' %>
  <div class="display-none tablet:display-flex grid-row grid-gap margin-bottom-4">
    <div class="grid-offset-2 grid-col-3">
      <%= image_tag(
            asset_path('user-access.svg'),
            width: 180,
            height: 59,
            alt: '',
          ) %>
    </div>
    <div class="grid-col-5">
      <div>
        <%= t('account.navigation.access_services', app_name: APP_NAME) %>
      </div>
      <div>
        <%= link_to t('account.navigation.learn_more', app_name: APP_NAME), MarketingSite.base_url %>
      </div>
    </div>
  </div>
  <div class="grid-row grid-gap">
    <div class="display-none tablet:display-block tablet:grid-col-4">
      <%= render 'accounts/side_nav' %>
    </div>
    <div class="tablet:grid-col-8" id="account-profile">
      <%= yield %>
    </div>
  </div>
<% end %>

<%= javascript_packs_tag_once('navigation') %>
<%= render template: 'layouts/base', locals: { disable_card: true } %>
