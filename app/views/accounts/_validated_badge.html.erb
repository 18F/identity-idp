<% if @presenter.show_verified_badge? %>
  <%= render TooltipComponent.new(tooltip_text: @presenter.biometric_identity_verification? ? t('components.badge_tooltip_component.verified_biometric') : t('components.badge_tooltip_component.verified')) do %>
    <%= render BadgeComponent.new(icon: :check_circle).with_content(t('headings.account.verified_account')) %>
  <% end %>
<% end %>
<% if @presenter.show_unverified? %>
  <%= render TooltipComponent.new(tooltip_text: t('components.badge_tooltip_component.unverified')) do %>
    <%= render BadgeComponent.new(icon: :check_circle).with_content(t('headings.account.unverified')) %>
  <% end %>
<% end %>
<% if @presenter.show_ipp_partial? || @presenter.show_gpo_partial? %>
  <%= render TooltipComponent.new(tooltip_text: t('components.badge_tooltip_component.pending')) do %>
    <%= render BadgeComponent.new(icon: :check_circle).with_content(t('headings.account.pending')) %>
  <% end %>
<% end %>
