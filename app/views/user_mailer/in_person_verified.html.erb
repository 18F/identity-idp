<%= image_tag('user-signup-ial2.svg', alt: '', class: 'float-center') %>
<p>
<div class="s16">
    <%= t('user_mailer.in_person_verified.greeting', name: @first_name ) %><br>
    <%= t('user_mailer.in_person_verified.intro', location: @presenter.location, date: @presenter.date) %><br /><br />
    <%= t('user_mailer.in_person_verified.next_sign_in') %>
</div>
</p>

<div class="mt-40">
<table class="button expanded big radius">
  <tbody>
    <tr>
      <td>
        <table>
          <tbody>
            <tr>
              <td style="text-align: center">
                <%= link_to t('user_mailer.in_person_verified.sign_in'),
                            sign_up_create_email_confirmation_url(
                              _request_id: @request_id,
                              confirmation_token: @token,
                              locale: @locale,
                            ),
                            target: '_blank',
                            class: 'float-center',
                            rel: 'noopener' %>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
      <td class="expander"></td>
    </tr>
  </tbody>
</table>
</div>

<p>
    <%= link_to t('user_mailer.in_person_verified.link'), ('http://www.secure.login.gov/verify') %>
</p>

<p class="s16">
<br />
<%= t('user_mailer.in_person_verified.warning_contact_us_html', 
        contact_us:"https://www.login.gov/contact/", 
        sign_in: event_disavowal_url(disavowal_token: @disavowal_token),
    ) %>
<a>
</a>
</p>