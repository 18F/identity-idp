<% title presenter.title %>

<%= image_tag(asset_url(presenter.state_icon), alt: '', width: 54) %>

<h1 class="margin-bottom-1 margin-top-4 margin-y-0">
  <%= presenter.header %>
</h1>

<p>
  <%= presenter.description %>
</p>

<% if presenter.message.present? %>
  <div class="col-2">
    <hr class="margin-top-4 margin-bottom-2 bw4 rounded border-<%= presenter.state_color %>" />
  </div>

  <h2 class="h4 margin-bottom-2 margin-top-4 margin-y-0">
    <%= presenter.message %>
  </h2>
<% end %>

<hr>

<% presenter.next_steps.each do |step| %>
  <p><%== step %></p>
<% end; if presenter.js %>
  <%= nonced_javascript_tag presenter.js %>
<% end %>
