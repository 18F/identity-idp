<%#
locals:
* f: from validated_form_for
%>

<%= f.label :ssn, class: 'usa-label' do %>
  <%= t('idv.form.ssn_label_html') %>
<% end %>
<div class="margin-bottom-1 usa-hint">
  <%= t('forms.example') %> 123-45-6789
</div>
<%# maxlength set and includes '-' delimiters to work around cleave bug %>
<%= f.input(
      :ssn,
      as: :password,
      label: false,
      required: true,
      pattern: '^\d{3}-?\d{2}-?\d{4}$',
      maxlength: 11,
      input_html: { aria: { invalid: false }, class: 'ssn ssn-toggle', value: '' }
    ) %>
<%= javascript_packs_tag_once('ssn-field') %>
