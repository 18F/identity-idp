<% title t('mfa.additional_mfa_required.title') %>

<%= image_tag asset_url('user-signup-ial1.svg'), width: 107, height: 119, alt: '', class: 'margin-bottom-4' %>

<%= render PageHeadingComponent.new.with_content(t('mfa.additional_mfa_required.title')) %>

<p class='margin-top-1 margin-bottom-4'>
  <%= t('mfa.additional_mfa_required.info') %>
  <%= link_to(t('mfa.additional_mfa_required.learn_more'), @learn_more) %>
</p>

<div class="col-12">
  <%= link_to(
        @next_path,
        class: 'usa-button usa-button--wide usa-button--big margin-bottom-3',
      ) { t('mfa.additional_mfa_required.button') } %>
</div>

<%= button_to(
      additional_mfa_required_skip_path,
      method: :post,
      class: 'usa-button usa-button--unstyled',
    ) do %>
  <%= t('mfa.skip') %>
<% end %>