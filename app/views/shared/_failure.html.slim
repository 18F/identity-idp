- title presenter.title

= image_tag(asset_url(presenter.state_icon),
  alt: presenter.state_alt_text, width: 54)

h1.h3.mb1.mt3.my0 = presenter.header

p == presenter.description

.col-2
  hr class="mt3 mb2 bw4 rounded border-#{presenter.state_color}"

- if presenter.message.present?
  h2.h4.mb2.mt3.my0 = presenter.message
  = render 'shared/failure_url', presenter: presenter

- presenter.next_steps.each do |step|
  p == step

- if presenter.js
  = nonced_javascript_tag presenter.js
