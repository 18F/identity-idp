<% if @presenter.show_verified_badge? %>
  <%= render BadgeTooltipComponent.new(icon: :check_circle, icon_class: 'text-success', tooltip_text: @presenter.biometric_identity_verification? ? t('components.badge_tooltip_component.verified_biometric') : t('components.badge_tooltip_component.verified'), class: 'usa-tooltip', data_position: 'top').with_content(t('headings.account.verified_account')) %>
<% end %>
<% if @presenter.show_unverified? %>
  <%= render BadgeTooltipComponent.new(icon: :check_circle, icon_class: 'text-warning', tooltip_text: t('components.badge_tooltip_component.unverified'), class: 'usa-tooltip border-warning', data_position: 'top').with_content(t('headings.account.unverified')) %>
<% end %>
<% if @presenter.show_ipp_partial? || @presenter.show_gpo_partial? %>
  <%= render BadgeTooltipComponent.new(icon: :check_circle, icon_class: 'text-info', tooltip_text: t('components.badge_tooltip_component.pending'), class: 'usa-tooltip border-info', data_position: 'top').with_content(t('headings.account.pending')) %>
<% end %>