<p class="lead" style="margin-bottom: 1em">
  <%= @first_sentence %>
</p>
<p class="lead">
  <%= t('user_mailer.email_confirmation_instructions.request_with_diff_email', app_name: APP_NAME) %>
</p>

<table class="button expanded large radius" role="presentation">
  <tbody>
    <tr>
      <td>
        <table style="margin-bottom: 1em">
          <tbody>
            <tr>
              <td style="text-align: center">
                  <%= link_to t('user_mailer.email_confirmation_instructions.try_diff_email'),
                              new_user_password_url,
                              target: '_blank',
                              class: 'float-center',
                              align: 'center',
                              rel: 'noopener' %>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
      <td class="expander"></td>
    </tr>
  </tbody>
</table>

<p>
  <%= t('user_mailer.email_confirmation_instructions.use_this_email') %>
  <%= link_to t('user_mailer.email_confirmation_instructions.create_new_account'),
              sign_up_create_email_confirmation_url(
                _request_id: @request_id,
                confirmation_token: @token,
                locale: @locale,
              ),
              target: '_blank',
              rel: 'noopener' %>
  <%= t(
        'user_mailer.email_confirmation_instructions.footer',
        confirmation_period: @confirmation_period,
      ) %>
</p>
