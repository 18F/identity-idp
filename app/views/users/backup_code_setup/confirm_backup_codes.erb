<% title t('titles.backup_codes') %>

<%= render PageHeadingComponent.new.with_content(t('titles.backup_codes')) %>

<p>
  <%= t('two_factor_authentication.backup_codes.warning_html') %>
</p>

<p>
  <%= t('two_factor_authentication.backup_codes.instructions', app_name: APP_NAME) %>
</p>

<div>
  <%= link_to(
        sign_up_completed_path,
        class: 'usa-button usa-button--wide usa-button--big margin-bottom-3 margin-top-5',
      ) do %>
    <%= t('two_factor_authentication.backup_codes.saved_backup_codes') %>
  <% end %>

  <%= link_to(
        backup_code_regenerate_path,
        class: 'usa-button usa-button--wide usa-button--big usa-button--outline',
      ) do %>
    <%= t('two_factor_authentication.backup_codes.new_backup_codes') %>
  <% end %>
