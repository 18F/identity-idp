<% if @presenter.show_verified_badge? %>
  <%= render BadgeTooltipComponent.new(icon: :check_circle, tooltip_text: @presenter.biometric_identity_verification? ? t('components.badge_tooltip_component.verified_biometric') : t('components.badge_tooltip_component.verified')).with_content(t('headings.account.verified_account')) %>
<% end %>
<% if @presenter.show_unverified? %>
  <%= render BadgeTooltipComponent.new(icon: :check_circle, tooltip_text: t('components.badge_tooltip_component.unverified')).with_content(t('headings.account.unverified')) %>
<% end %>
<% if @presenter.show_ipp_partial? || @presenter.show_gpo_partial? %>
  <%= render BadgeTooltipComponent.new(icon: :check_circle, tooltip_text: t('components.badge_tooltip_component.pending')).with_content(t('headings.account.pending')) %>
<% end %>
