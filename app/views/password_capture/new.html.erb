<% title t('titles.visitors.index') %>

<%= render PageHeadingComponent.new.with_content(password_header) %>

<%= simple_form_for(
      current_user,
      as: :user,
      url: capture_password_url,
      method: :post,
      html: { autocomplete: 'off', class: 'margin-top-4' },
    ) do |f| %>
  <%= render PasswordToggleComponent.new(
        form: f,
        field_options: {
          label: t('account.index.password'),
          required: true,
        },
      ) %>
  <%= f.submit t('forms.buttons.submit.default'), class: 'display-block margin-y-5' %>
<% end %>

<%= render PageFooterComponent.new do %>
  <%= link_to t('links.passwords.forgot'), new_user_password_url %>
<% end %>
